<%- include partials/header.ejs %>

<div class="col-lg-12">
        <div class="col-lg-12">
            <table class="table">
                <tr>
                    <td>
                        <a class="btn btn-primary" href="company/add" role="button">Add Company</a>
                    </td>
                </tr>
            </table>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">TAN</th>
                    <th scope="col">PAN</th>
                    <th scope="col">GST</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= data[i].company_id %></th>
                            <td><%= data[i].company_name %></td>
                            <td><%= data[i].contact_number %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].tan_number %></td>
                            <td><%= data[i].pan_number %></td>
                            <td><%= data[i].gst_number %></td>
                            <td><%= data[i].status %></td>
                            <td>
                                <div class="dropdown dropleft">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Actions
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <div class="dropdown-header">Status</div>
                                            <a class="dropdown-item" href="javascript:void(0);">Active</a>
                                            <a class="dropdown-item" href="javascript:void(0);">Inactive</a>
                                        </div>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
<%- include partials/footer.ejs %>