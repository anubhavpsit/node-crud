<%- include partials/header.ejs %>

<div class="col-lg-12">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <td>
                    <a class="btn btn-primary" href="stores/add" role="button">Add Store</a>
                </td>
            </tr>
        </table>
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Icon</th>
                <th scope="col">Store Name</th>
                <th scope="col">Cluster</th>
                <th scope="col">Store Type</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= data[i].store_id %></th>
                        <td>
<a class="dropdown-item edit_store_icon" data-store-status="1" data-type="store_icon" data-store-id="<%= data[i].store_id %>" id="edit_store_icon" href="javascript:void(0);">
<img src="<%= data[i].image %>" style="width:60px;" />
</a>
                        </td>
                        <td><%= data[i].store_name %></td>
                        <td><%= data[i].cluster_id %></td>
                        <td><%= data[i].store_type_id %></td>
                        <td><%= data[i].status %></td>
                        <td>
                            <div class="dropdown dropleft">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <div class="dropdown-header">Status</div>
                                        <a class="dropdown-item edit_store_Status" data-store-status="1" data-store-id="<%= data[i].store_id %>" id="toggle_store_Status" href="javascript:void(0);">Active</a>
                                        <a class="dropdown-item edit_store_Status" data-store-status="0" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">Inactive</a>
                                        <a class="dropdown-item edit_store_Status" data-store-status="2" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">Pending</a>
                                        <div class="dropdown-header">Images</div>
                                        <a class="dropdown-item view_store_multi_images" data-type="store_multi" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">View Store All Images</a>
                                        <a class="dropdown-item store_multi_images" data-type="store_multi" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">Add Store All Image</a>

                                        <div class="dropdown-header">Product</div>
                                        <a class="dropdown-item store_products" href="stores/productsList/<%= data[i].store_id %>">Products</a>
                                    </div>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include partials/footer.ejs %>