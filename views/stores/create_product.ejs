<%- include partials/header.ejs %>

<div class="col-lg-12">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <td>
                    <a class="btn btn-primary" href="/stores/productsList/<%= data.storeId %>" role="button">Back</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-lg-12">
        <form action="/stores/productsList/add" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <h3>Product Details</h3>           
            </div>
            <div class="form-row">
                <div class="form-group col-md-12" style="padding:0px;">
                    <label for="inputEmail4">Product Name</label>
                    <input type="text" class="form-control" id="product_name" name="product_name" placeholder="Product Name" value="test">
                    <input type="hidden" class="form-control" id="store_id" name="store_id" value="<%= data.storeId %>">
                </div>
                <div class="form-group col-md-12 custom-file">
                    <input type="file" name="product_icon" class="custom-file-input" id="productFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>

            <div class="mx-auto">&nbsp;</div>
            <button type="submit" class="btn btn-primary">Add Product</button>
            <div class="mx-auto">&nbsp;</div>
        </form>
    </div>
</div>
<%- include partials/footer.ejs %>