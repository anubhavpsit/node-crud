<%- include partials/header.ejs %>

<div class="col-lg-12">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <td>
                    <a class="btn btn-primary" href="offers/add" role="button">Add Offer</a>
                </td>
            </tr>
        </table>
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Icon</th>
                <th scope="col">Offer Title</th>
                <th scope="col">Offer Type</th>
                <th scope="col">Offer Category</th>
                <th scope="col">Valid From</th>
                <th scope="col">Valid Till</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= data[i].offer_id %></th>
                        <td>
<a class="dropdown-item edit_offer_banner" data-store-status="1" data-type="offer_banner" data-id="<%= data[i].offer_id_id %>" data-parent-id="0" id="edit_offer_banner" href="javascript:void(0);">
<img src="<%= data[i].banner_image %>" style="width:60px;" />
</a>
                        </td>
                        <td><%= data[i].offer_title %></td>
                        <td><%= data[i].offer_type_text %></td>
                        <td><%= data[i].offer_category_text %></td>
                        <td><%= moment(data[i].validity_from).format( 'DD-MM-YYYY') %></td>
                        <td><%= moment(data[i].validity_to).format( 'DD-MM-YYYY') %></td>
                        <td><%= data[i].status %></td>
                        <td>
                            <div class="dropdown dropleft">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <div class="dropdown-header">Status</div>
                                            <a class="dropdown-item edit_store_Status" data-store-status="1" data-store-id="<%= data[i].store_id %>" id="toggle_store_Status" href="javascript:void(0);">Active</a>
                                            <a class="dropdown-item edit_store_Status" data-store-status="0" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">Inactive</a>
                                            <a class="dropdown-item edit_store_Status" data-store-status="2" data-store-id="<%= data[i].store_id %>" href="javascript:void(0);">Pending</a>

                                        <div class="dropdown-header">Stores Mapped</div>
                                        <a class="dropdown-item store_products" href="offers/mappedStoresList/<%= data[i].offer_id %>">View Mapped Stores</a>
                                    </div>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include partials/footer.ejs %>